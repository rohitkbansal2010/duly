{% for condition in conditions|batch(9) %}
    <div {% if loop.index > 2 %} class="column hidden"{% else %} class="column" {% endif %}>
        {% for type in condition %}
            {% if type.conditionDescription is not null %} 
                <a href="{{ type.url }}">{{ type.title }}</a>
            {% else %}
                <p>{{ type.title }}</p>
            {% endif %}
        {% endfor %}
    </div>
{% endfor %}