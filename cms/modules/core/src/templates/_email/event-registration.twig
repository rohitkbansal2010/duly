{% extends "_layouts/_layout.twig" %}

{% set event = craft.calendar.events({
        id: event,
        limit: 1,
        rangeStart: occurrence
    })
    .one()
%}

{% set location = craft.matrixBlocks()
    .owner(event)
    .id(location)
    .one()
%}

{% block body %}
    Event Registration for {{ event.title }} at {{ location.addressDetails }} for {{ occurrence }} is confirmed.
{% endblock %}