{% if mainVideo %}
	<div class="details video interactive service-videos-section">
		<div class="main-video" id="hero-video" tabindex="0">
			{% set mainUrl = mainVideo.youtubeLink|replace({'watch':'embed'}) ~ "?enablejsapi=1" %}
			<iframe width="100%" 
				height="100%" 
				id='iframe-video' 
				src={{ mainUrl }} 
				frameborder="0" 
				allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" 
				allowfullscreen>
			</iframe>

			<div class="video">
				<div class="content">
					<div class="image" tabindex="0"></div>

					<p class="title"></p>
					<span class="hidden">{{ mainUrl }}</span>
				</div>
			</div>
		</div>

		{% if relatedVideos|length %}
			<div class="related-videos">
				{% for video in relatedVideos %}
					<div class="video">
						<div class="content">
							<div class="image" tabindex="0"></div>
							<p class="title"></p>
							{% set relatedUrl = video.youtubeLink|replace({'watch':'embed'}) ~ "?enablejsapi=1" %}
							<span class="hidden">{{ relatedUrl }}</span>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
{% endif %}
