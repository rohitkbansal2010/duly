{# All templates extend _layouts/_main.twig or a child layout of _layouts/_main.twig #}
{% extends "_layouts/_main.twig" %}

{% block title 'Newsletter'|t %}
{% block bodyClass "newsletter-page" %}

{# Main is where the body content of the page is defined at #}
{% block main %}
<div class="container">
    <!-- Begin Mailchimp Signup Form -->
    <div id="mc_embed_signup">
        <form
            action="https://dupagemedicalgroup.us10.list-manage.com/subscribe/post?u=955098b60fb27faa28cc74150&amp;id=8fce4bddac"
            method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate"
            target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">
                <h2>{{ "Newsletter Signup"|t }}</h2>
                <div class="mc-field-group">
                    {% include "_input/_input.twig" with {
                        type: 'text',
                        name: 'MMERGE1',
                        id: 'mce-MMERGE1',
                        extraOptions: {
                            required: "required"
                        },
                        label: "First Name"|t,
                    } only %}
                </div>
                <div class="mc-field-group">
                    {% include "_input/_input.twig" with {
                        type: 'text',
                        name: 'LNAME',
                        id: 'mce-LNAME',
                        extraOptions: {
                            required: "required"
                        },
                        label: "Last Name"|t,
                    } only %}
                </div>
                <div class="mc-field-group">
                    {% include "_input/_input.twig" with {
                        type: 'text',
                        name: 'MMERGE3',
                        id: 'mce-MMERGE3',
                        extraOptions: {
                            required: "required"
                        },
                        label: "Zip Code"|t,
                    } only %}
                </div>
                <div class="mc-field-group">
                    {% include "_input/_input.twig" with {
                        type: 'text',
                        name: 'AGE',
                        id: 'mce-AGE',
                        label: "Age"|t,
                    } only %}
                </div>
                <div class="mc-field-group">
                    {% include "_input/_input.twig" with {
                        type: 'text',
                        name: 'EMAIL',
                        id: 'mce-EMAIL',
                        extraOptions: {
                            required: "required"
                        },
                        label: "Email"|t,
                    } only %}
                </div>
                <div class="mc-field-group input-group">
                    <h4>{{ "Health Interests"|t }}</h4>

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][32]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-0',
					    tabindex: 0,
					    label: 'Behavioral & Mental Health'|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][64]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-1',
					    tabindex: 0,
					    label: "Children's Health"|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][128]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-2',
					    tabindex: 0,
					    label: 'Diagnostics Testing'|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][256]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-3',
					    tabindex: 0,
					    label: 'Diseases & Conditions'|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][512]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-4',
					    tabindex: 0,
					    label: 'Innovation'|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][1024]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-5',
					    tabindex: 0,
					    label: 'Lifestyle & Wellness'|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][2048]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-6',
					    tabindex: 0,
					    label: "Men's Health"|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][4096]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-7',
					    tabindex: 0,
					    label: "Women's Health"|t
					} only %}

                    {% include "_input/_checkbox.twig" with {
					    name: 'group[2037][8192]',
					    class: 'newsletter-checkbox',
					    id: 'mce-group[2037]-2037-8',
					    tabindex: 0,
					    label: "Senior's Health"|t
					} only %}
                </div>
                <div id="mce-responses" class="clear">
                    <div class="response" id="mce-error-response" style="display:none"></div>
                    <div class="response" id="mce-success-response" style="display:none"></div>
                </div>
                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px;" aria-hidden="true">
                    <input type="text" name="b_955098b60fb27faa28cc74150_8fce4bddac" tabindex="-1" value="">
                </div>
                <div class="clear">
                    <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button submit-button">
                </div>
            </div>
        </form>
    </div>
{% endblock %}